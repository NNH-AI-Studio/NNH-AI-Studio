import { useState } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { MessageCircle, FileText, BarChart3 } from 'lucide-react';
import ReviewReplyDemo from './ReviewReplyDemo';
import PostGeneratorDemo from './PostGeneratorDemo';
import InsightsAnalyzerDemo from './InsightsAnalyzerDemo';

const tabs = [
  { id: 'reviews', label: 'Review Reply', icon: MessageCircle, component: ReviewReplyDemo },
  { id: 'posts', label: 'Post Generator', icon: FileText, component: PostGeneratorDemo },
  { id: 'insights', label: 'Insights Analyzer', icon: BarChart3, component: InsightsAnalyzerDemo }
];

export default function AIShowcase() {
  const [activeTab, setActiveTab] = useState('reviews');

  const ActiveComponent = tabs.find(tab => tab.id === activeTab)?.component || ReviewReplyDemo;

  return (
    <section className="py-20 px-6 bg-gradient-to-br from-blue-500/5 via-purple-500/5 to-pink-500/5">
      <div className="max-w-6xl mx-auto">
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          whileInView={{ opacity: 1, y: 0 }}
          viewport={{ once: true }}
          className="text-center mb-12"
        >
          <h2 className="text-4xl md:text-5xl font-bold mb-4 text-white">
            Experience AI in Action
          </h2>
          <p className="text-xl text-white/70 max-w-2xl mx-auto">
            Try our AI-powered tools live and see how they can transform your local SEO workflow
          </p>
        </motion.div>

        <div className="bg-black/40 backdrop-blur-xl border border-white/10 rounded-2xl p-6 md:p-8">
          <div className="flex flex-wrap gap-3 mb-8">
            {tabs.map((tab) => {
              const Icon = tab.icon;
              return (
                <button
                  key={tab.id}
                  onClick={() => setActiveTab(tab.id)}
                  className={`flex items-center gap-2 px-6 py-3 rounded-xl font-medium transition-all ${
                    activeTab === tab.id
                      ? 'bg-gradient-to-r from-blue-500 to-purple-500 text-white shadow-lg shadow-blue-500/25'
                      : 'bg-white/5 text-white/60 hover:bg-white/10 hover:text-white/80'
                  }`}
                >
                  <Icon className="w-5 h-5" />
                  <span>{tab.label}</span>
                </button>
              );
            })}
          </div>

          <AnimatePresence mode="wait">
            <motion.div
              key={activeTab}
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              exit={{ opacity: 0, y: -20 }}
              transition={{ duration: 0.3 }}
            >
              <ActiveComponent />
            </motion.div>
          </AnimatePresence>
        </div>

        <motion.div
          initial={{ opacity: 0 }}
          whileInView={{ opacity: 1 }}
          viewport={{ once: true }}
          transition={{ delay: 0.3 }}
          className="text-center mt-8"
        >
          <p className="text-white/60 text-sm">
            All AI responses are generated in real-time using advanced language models
          </p>
        </motion.div>
      </div>
    </section>
  );
}
